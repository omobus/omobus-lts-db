<?xml version="1.0" encoding="utf-8"?>
<wish_days templ="%wish_day_id%;%descr%;%days%;%row_no%;">
<verification>
  <![CDATA[
select count(*) from data_stream
    where s_id = '//proxy/%uid%/%pack_code%' and digest = '%pack_digest%'
  ]]>
</verification>
<begin>
  <![CDATA[
update wish_days set hidden=1
    where db_id = '%ErpCode%' and hidden = 0
  ]]>
</begin>
<check_exist>
  <![CDATA[
select count(*) exist from wish_days
    where db_id = '%ErpCode%' and wish_day_id = '%wish_day_id%'
  ]]>
</check_exist>
<update>
  <![CDATA[
update wish_days set descr='%descr%', days=string_to_array('%days%',',')::smallint[], row_no=int32_in('%row_no%'), hidden=0
    where db_id = '%ErpCode%' and wish_day_id = '%wish_day_id%'
  ]]>
</update>
<insert>
  <![CDATA[
insert into wish_days (db_id, wish_day_id, descr, days, row_no, hidden)
    values ('%ErpCode%', '%wish_day_id%', '%descr%', string_to_array('%days%',',')::smallint[], int32_in('%row_no%'), 0)
  ]]>
</insert>
<end>
  <![CDATA[
select stor_data_stream('//proxy/%uid%/%pack_code%', '%pack_digest%', '%server_hostname%')
  ]]>
</end>
</wish_days>