<?xml version="1.0" encoding="utf-8"?>
<kinds templ="%kind_id%;%descr%;%row_no%;%hidden%;">
<verification>
  <![CDATA[
select count(*) from data_stream
    where s_id = '//proxy/%uid%/%pack_code%' and digest = '%pack_digest%'
  ]]>
</verification>
<check_exist>
  <![CDATA[
select count(*) exist from kinds 
    where db_id = '%ErpCode%' and kind_id = '%kind_id%'
  ]]>
</check_exist>
<update>
  <![CDATA[
update kinds set descr='%descr%', row_no=int32_in('%row_no%'), hidden=0%hidden%
    where db_id = '%ErpCode%' and kind_id = '%kind_id%'
  ]]>
</update>
<insert>
  <![CDATA[
insert into kinds (db_id, kind_id, descr, row_no, hidden)
    values ('%ErpCode%', '%kind_id%', '%descr%', int32_in('%row_no%'), 0%hidden%)
  ]]>
</insert>
<end>
  <![CDATA[
#ifdef PGSQL
select stor_data_stream('//proxy/%uid%/%pack_code%', '%pack_digest%', '%server_hostname%')
#endif //PGSQL
#ifdef MSSQL
exec stor_data_stream '//proxy/%uid%/%pack_code%', '%pack_digest%', '%server_hostname%'
#endif //MSSQL
  ]]>
</end>
</kinds>