<?xml version="1.0" encoding="utf-8"?>
<segmentations templ="%seg_id%;%descr%;">
<verification>
  <![CDATA[
select count(*) from data_stream
    where s_id = '//proxy/%uid%/%pack_code%' and digest = '%pack_digest%'
  ]]>
</verification>
<begin>
  <![CDATA[
update segmentations set hidden=1
    where db_id = '%ErpCode%'
  ]]>
</begin>
<check_exist>
  <![CDATA[
select count(*) exist from segmentations 
    where db_id = '%ErpCode%' and seg_id = '%seg_id%'
  ]]>
</check_exist>
<update>
  <![CDATA[
update segmentations set descr='%descr%', hidden=0
    where db_id = '%ErpCode%' and seg_id = '%seg_id%'
  ]]>
</update>
<insert>
  <![CDATA[
insert into segmentations (db_id, seg_id, descr, hidden) 
    values ('%ErpCode%', '%seg_id%', '%descr%', 0)
  ]]>
</insert>
<end>
  <![CDATA[
select stor_data_stream('//proxy/%uid%/%pack_code%', '%pack_digest%', '%server_hostname%')
--exec stor_data_stream '//proxy/%uid%/%pack_code%', '%pack_digest%', '%server_hostname%'
  ]]>
</end>
</segmentations>